<!DOCTYPE html>
<html lang="en">
<head>
    <title>Authentication <%= error ? 'Failed' : 'Success' %></title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
</head>
<body>
  <form style="display: hidden" method="POST" id="form">
    <input type="hidden" id="session" name="session" value=""/>
    <input type="hidden" id="error" name="error" value=""/>
    <input type="hidden" id="link" name="link" value=""/>
  </form>
  <script type="text/javascript">
    var session = <%- JSON.stringify(session) %>;
    var error = <%- JSON.stringify(error) %>;
    var link = <%- JSON.stringify(link) %>;
    var form = document.getElementById('form');
    if (error) {
      form.setAttribute('action', '<%- redirectOnError %>');
      document.getElementById('error').value = error ? JSON.stringify(error) : null;
    } else {
      form.setAttribute('action', '<%- redirect %>');
      document.getElementById('session').value = session ? JSON.stringify(session) : null;
      document.getElementById('link').value = link ? JSON.stringify(link) : null;
    }
    form.submit();
  </script>
</body>
</html>
